<Window x:Class="MVVM_CommunityToolkit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_CommunityToolkit"
        mc:Ignorable="d"
        Title="CommunityToolkit MVVM Demo" Height="250" Width="300">

    <StackPanel Margin="10">
        <TextBox Text="{Binding NewName, UpdateSourceTrigger=PropertyChanged}" />
        <Button Content="Add Person" Command="{Binding AddPersonCommand}"/>
        <ListBox ItemsSource="{Binding People}"/>
    </StackPanel>
</Window>
